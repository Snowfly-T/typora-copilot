{
  "name": "typora-copilot",
  "version": "0.2.5-dev",
  "private": true,
  "description": "GitHub Copilot plugin for Typora",
  "keywords": [
    "Typora",
    "Copilot",
    "GitHub Copilot",
    "AI",
    "code completion",
    "code suggestion",
    "code generation"
  ],
  "homepage": "https://github.com/Snowfly-T/typora-copilot",
  "bugs": {
    "url": "https://github.com/Snowfly-T/typora-copilot/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Snowfly-T/typora-copilot"
  },
  "license": "MIT",
  "author": "Snowflyt <gaoge011022@163.com>",
  "type": "module",
  "main": "./index.js",
  "scripts": {
    "build:dev": "npm run prebuild && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript && cpy {package.json,README.md,README.zh-CN.md,bin,docs,language-server} dist && cpy src/assets/**/* dist/assets",
    "build:release": "npm run prebuild && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript && prettier --loglevel=silent --print-width 80 --write dist/**/* && cpy {package.json,README.md,README.zh-CN.md,bin,docs,language-server} dist && cpy src/assets/**/* dist/assets",
    "build:watch": "npm run prebuild && cpy {package.json,README.md,README.zh-CN.md,bin,docs,language-server} dist && cpy src/assets/**/* dist/assets && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript --watch",
    "clean": "rimraf dist",
    "format": "prettier --write {src,test}/**/*.{json,js,jsx,ts,tsx} *.{js,cjs,mjs,ts,cts,mts,json,md} && prettier --write --parser json .hintrc",
    "lint": "eslint {src,test}/**/*.{js,jsx,ts,tsx} *.{js,cjs,mjs,ts,cts,mts} --report-unused-disable-directives-severity error",
    "lint:fix": "eslint --fix {src,test}/**/*.{js,jsx,ts,tsx} *.{js,cjs,mjs,ts,cts,mts} --report-unused-disable-directives-severity error",
    "prebuild": "npm run clean",
    "test": "vitest run",
    "test-types": "typroof",
    "test:cov": "vitest run --coverage",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "test:watch": "vitest",
    "test:watch-cov": "vitest --coverage"
  },
  "dependencies": {
    "@preact/signals": "^1.2.2",
    "core-js": "^3.35.1",
    "date-fns": "^3.3.1",
    "lodash-es": "^4.17.21",
    "preact": "^10.19.3",
    "ts-pattern": "^5.0.6"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/codemirror": "^5.60.15",
    "@types/core-js": "^2.5.8",
    "@types/jquery": "^3.5.29",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.6",
    "@types/prettier": "2.7.3",
    "@types/rangy": "^0.0.38",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitest/coverage-v8": "^1.2.1",
    "@vitest/ui": "^1.2.1",
    "cpy-cli": "^5.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-sort-destructure-keys": "^1.5.0",
    "happy-dom": "^13.3.1",
    "hotscript": "^1.0.13",
    "prettier": "^2.8.8",
    "prettier-plugin-packagejson": "^2.4.9",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.6",
    "typescript": "^5.3.3",
    "typroof": "^0.2.5",
    "vitest": "^1.2.1"
  }
}
